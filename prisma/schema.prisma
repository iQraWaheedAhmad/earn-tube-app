// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  userNo          Int       @unique @default(autoincrement()) @map("user_no")
  email           String    @unique
  name            String?
  password        String
  emailVerified   DateTime? @map("email_verified")
  image           String?
  balance         Float     @default(0)
  referralCode    String?   @unique @map("referral_code")
  referredBy      String?   @map("referred_by")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  resetToken      String?   @map("reset_token")
  resetTokenExp   DateTime? @map("reset_token_exp")
  accounts        Account[]
  sessions        Session[]
  deposits        Deposit[]
  withdrawals    Withdrawal[]
  referrals       Referral[] @relation("Referrer")
  referredUsers   User[]     @relation("Referrals")
  referredByUser  User?     @relation("Referrals", fields: [referredBy], references: [id])
  referralRecords Referral[] @relation("ReferredUsers")
  dailyTaskRounds DailyTaskRound[]
  
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Deposit {
  id              String    @id @default(cuid())
  userId          String    @map("user_id")
  userNo          Int?      @map("user_no")
  coin            String
  amount          Float
  transactionHash String    @map("transaction_hash")
  paymentProof    String?   @map("payment_proof")
  status          DepositStatus @default(PENDING)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("deposits")
}

model Withdrawal {
  id        String          @id @default(cuid())
  userId    String          @map("user_id")
  userNo    Int?            @map("user_no")
  asset     String
  address   String
  amount    Float
  balance   Float           @map("balance_at_withdrawal")
  status    WithdrawalStatus @default(PENDING)
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("withdrawals")
}

model Referral {
  id            String    @id @default(cuid())
  referrerId    String    @map("referrer_id")
  referrerNo    Int?      @map("referrer_no")
  referredId    String    @map("referred_id")
  referredNo    Int?      @map("referred_no")
  rewardAmount  Float     @map("reward_amount")
  planAmount    Float     @map("plan_amount")
  status        ReferralStatus @default(PENDING)
  paidOut       Boolean   @default(false) @map("paid_out")
  paidOutAt     DateTime? @map("paid_out_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  referrer      User      @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referredUser  User      @relation("ReferredUsers", fields: [referredId], references: [id], onDelete: Cascade)

  @@unique([referredId])
  @@map("referrals")
}

enum WithdrawalStatus {
  PENDING
  COMPLETED
  REJECTED
}

enum DepositStatus {
  PENDING
  COMPLETED
  REJECTED
}

enum ReferralStatus {
  PENDING
  COMPLETED
  REJECTED
}

model DailyTaskRound {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  userNo      Int?     @map("user_no")
  dateKey     String   @map("date_key") // YYYY-MM-DD (UTC)
  totalSteps  Int      @default(5) @map("total_steps")
  currentStep Int      @default(0) @map("current_step") // 0..totalSteps
  rewardAmount Float   @default(0) @map("reward_amount")
  completedAt DateTime? @map("completed_at")
  paidOut     Boolean  @default(false) @map("paid_out")
  paidOutAt   DateTime? @map("paid_out_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dateKey])
  @@map("daily_task_rounds")
}
